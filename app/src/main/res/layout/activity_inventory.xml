<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark" />

    <!-- Start/Stop Toggle -->
    <ToggleButton
        android:id="@+id/toggleButtonInvStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Start Inventory"
        android:textOn="Stop Inventory"
        android:layout_marginTop="12dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for start..."
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="12dp" />

    <!-- Result -->
    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp" />

    <!-- Last EPC -->
    <TextView
        android:id="@+id/text_epc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp" />
    <!-- List of all scanned tags -->
    <TextView
        android:id="@+id/text_all_scanned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scanned tags will appear here"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:textColor="#444" />
    <!-- Progress -->
    <TextView
        android:id="@+id/text_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress: 0 / 0"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="16dp" />

    <!-- Expected Tags -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/text_expected_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expected tags will appear here"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="#333333" />
    </ScrollView>
    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Section"
        android:layout_marginTop="12dp" />

</LinearLayout>
